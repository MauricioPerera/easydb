{
  "name": "@rckflr/easydb",
  "version": "1.0.1",
  "description": "Multi-backend storage with async/await, async iterables, and modern JavaScript â€” IndexedDB, Memory, D1/SQLite, PostgreSQL, Redis, Turso, localStorage",
  "main": "src/easydb.js",
  "module": "src/easydb.js",
  "types": "src/easydb.d.ts",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./src/easydb.js",
      "types": "./src/easydb.d.ts",
      "default": "./src/easydb.js"
    },
    "./adapters/indexeddb": {
      "import": "./src/adapters/indexeddb.js"
    },
    "./adapters/memory": {
      "import": "./src/adapters/memory.js"
    },
    "./adapters/d1": {
      "import": "./src/adapters/d1.js"
    },
    "./adapters/kv": {
      "import": "./src/adapters/kv.js"
    },
    "./adapters/localstorage": {
      "import": "./src/adapters/localstorage.js"
    },
    "./adapters/postgres": {
      "import": "./src/adapters/postgres.js"
    },
    "./adapters/redis": {
      "import": "./src/adapters/redis.js"
    },
    "./adapters/turso": {
      "import": "./src/adapters/turso.js"
    },
    "./adapters/sqlite": {
      "import": "./src/adapters/sqlite.js"
    },
    "./react": {
      "import": "./src/react.js",
      "types": "./src/react.d.ts"
    },
    "./vue": {
      "import": "./src/vue.js",
      "types": "./src/vue.d.ts"
    },
    "./svelte": {
      "import": "./src/svelte.js",
      "types": "./src/svelte.d.ts"
    },
    "./angular": {
      "import": "./src/angular.js",
      "types": "./src/angular.d.ts"
    },
    "./solid": {
      "import": "./src/solid.js",
      "types": "./src/solid.d.ts"
    },
    "./preact": {
      "import": "./src/preact.js",
      "types": "./src/preact.d.ts"
    },
    "./lit": {
      "import": "./src/lit.js",
      "types": "./src/lit.d.ts"
    }
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "metrics": "echo \"Core: $(wc -l < src/easydb.js) LOC | IDB: $(wc -l < src/adapters/indexeddb.js) LOC | Mem: $(wc -l < src/adapters/memory.js) LOC | D1: $(wc -l < src/adapters/d1.js) LOC | Browser gzip: $(cat src/easydb.js src/adapters/indexeddb.js | gzip -c | wc -c)B | Workers gzip: $(cat src/easydb.js src/adapters/d1.js | gzip -c | wc -c)B\"",
    "build": "node scripts/build.js",
    "bench": "node benchmarks/run.js",
    "demo": "open demo/index.html"
  },
  "keywords": [
    "indexeddb",
    "database",
    "async-iterable",
    "browser-storage",
    "wrapper",
    "proxy",
    "pull-cursor",
    "range-query",
    "watch",
    "reactive",
    "adapter",
    "memory-adapter",
    "d1-adapter",
    "cloudflare-workers",
    "sqlite",
    "multi-backend",
    "localstorage",
    "postgres",
    "postgresql",
    "redis",
    "turso",
    "libsql",
    "angular",
    "solid-js",
    "preact",
    "lit",
    "web-components"
  ],
  "author": "Mauricio Perera <https://automators.work>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioPerera/easydb.git"
  },
  "homepage": "https://github.com/MauricioPerera/easydb#readme",
  "bugs": {
    "url": "https://github.com/MauricioPerera/easydb/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "react": ">=18",
    "svelte": ">=3",
    "vue": ">=3",
    "@angular/core": ">=16",
    "solid-js": ">=1",
    "preact": ">=10",
    "lit": ">=2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "lit": {
      "optional": true
    }
  },
  "devDependencies": {
    "better-sqlite3": "^12.6.2",
    "esbuild": "^0.27.3",
    "fake-indexeddb": "^6.2.5",
    "vitest": "^4.0.18"
  }
}
